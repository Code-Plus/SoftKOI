<%= form_for(@reservation, remote: true, :html => { :role => "form" })  do |f| %>

   <div id="error_explanation" class="text-danger modal-errors"></div>

   <div class="row">
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group required" id="m_r_reserves">
              <%= f.label :customer,"Cliente", :class => "control-label" %>
              <%= f.text_field :customer , :class => "form-control"%>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group required">
              <%= f.label :date, "Fecha", :class => "control-label" %>
              <div class="input-group input-group-md date datepicker">
                <%= f.text_field :date, :class => "form-control input-md" %>
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-calendar"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group required">
              <%= f.label :consoles, "Consola", :class => "control-label" %>
              <%= collection_select(:reserve_price, :console_id, Console.all, :id, :name, {prompt: "Selecciona una opción"}, {:class=>'form-control type_product_id'}) %>
           </div>
          </div>
          <div class="col-sm-6">
            <div id="intervalrealtime" class="form-group required" style="display:none;"  attrdess="disabled_botton" realtimeprop="true">
               <%= f.label :interval, "Intervalo (minutos)", :class => "control-label" %>
               <%= f.select(:reserve_price_id, "" ,{prompt: "Selecciona una opción"}, :class => "form-control") %>
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
              <div class="form-group required">
                 <%= f.label :start_time,"Hora de incio", :class => "control-label" %>
                 <%= f.time_field :start_time ,:class => "form-control", :onkeyup => "price_console_function()" , :disabled => "true"%>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group required">
                 <%= f.label :end_time,"Hora de finalizacion", :class => "control-label" %>
                 <%= f.time_field :end_time, :class => "form-control", :disabled => "true"%>
              </div>
            </div>
        </div>
        <div class="form-group required">
           <%= f.label :price_reserve_id," Precio", :class => "control-label" %>
           <%= f.text_field :reserve_price_id , :class => "form-control field_prices_id hidden required" %>
           <%= text_field_tag :field_prices,'',class:'form-control field_prices', readonly: true%>
        </div>
     </div>
     <div class="col-sm-12">
        <hr style="border: 1; margin-top: 20px; ">
        <div class="col-sm-4" style="padding-left:0px;">
          <div class="form-group" style="margin-bottom: 0px;">
            <div class="btn btn-success bold" id="Btn_RReserve" onclick="validatereservations()" disabled="disabled">Registrar</div>
             <%# f.submit "Registrar", :class => "btn btn-success bold", :id=>"Btn_RReserve"%>
          </div>
        </div>
        <div class="col-sm-5" style="padding-top: 7px;">
          <p>
            ¿Activar reloj en tiempo real?
          </p>
        </div>
        <div class="col-sm-3">
          <div class="form-group" style="margin-bottom: 0px;margin-top: 8px;">
             <%=  check_box_tag "real_time","realtimepass",checked: true %>
          </div>
        </div>
     </div>
   </div>
<% end %>
