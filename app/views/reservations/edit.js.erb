// Add the dialog title
$('#dialog h4').html("<i class='fa fa-pencil'></i>&nbsp; Editar Reserva");

// Render the edit form
$('.modal-body').html('<%= j render("edit") %>');

// Show the dynamic dialog
$('#dialog').modal("show");

$('.datepicker').datepicker({
	autoclose: true,
	orientation: "bottom auto",
	format: "yyyy-mm-dd"
});

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
	$('.first_input').focus()
})

$.ajax({
	url:'reservations/ajaxscripts',
	datatype: 'js'
}).error(function(){
	console.log('En la B por favor mira el archivo de new.js.erb ubicado en reservations');
});
