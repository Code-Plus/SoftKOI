<div style="margin: 0px 60px;">
  <p id="notice"><%= notice %></p>
<% content_for :title do -%>
  Calendario de eventos
<% end -%>

  <div id="events_calendar">
    <%= render partial: "calendar", locals: {events: @events} %>
  </div>



  <br>

  <%# link_to 'New Event', new_event_path %>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div id="mostrar_eventos" class="">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel"><i class="fa fa-pencil"></i> Eventos del dia</h4>
        </div>
        <table>
          <thead>
            <tr>
              <th>Descripci√≥n</th>
              <th>Fecha de inicio</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.description %></td>
                <td><%= event.start_time %></td>
                <td><%= link_to 'Show', event %></td>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="modal-footer">
          <button type="button" class="btn btn-success bold inline" onclick="showandhidenewmodal()">Nuevo evento</button>
          <button type="button" class="btn btn-default bold inline" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
      <div id="nuevo_evento" class="hidden">
        <%= form_for(@event, :url => { :action => "create_event" } ) do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"><i class="fa fa-pencil"></i> Crear evento</h4>
          </div>

          <div class="col-sm-12">
            <div id="error_explanation" class="text-danger modal-errors"></div>
            <div class="form-group">
              <%= f.label :description %><br>
              <%= f.text_field :description %>
            </div>
            <div class="form-group">
              <%= f.label :start_time %><br>
              <%= f.datetime_select :start_time %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Crear evento", class:"btn btn-success bold inline" %>
            <button type="button" class="btn btn-default bold inline" data-dismiss="modal">Cerrar</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


