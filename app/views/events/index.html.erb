<div style="margin: 0px 60px;">
<% content_for :title do -%>
  Calendario de eventos
<% end -%>

<% content_for :button do -%>
  <%= link_to new_event_path, remote: true, class: 'btn btn-success bold' do %>
     <i class="fa fa-plus"></i>
     &nbsp;Nuevo Evento
  <% end %>
<% end -%>

  <div id="events_calendar">
    <%= render partial: "calendar", locals: {events: @events} %>
  </div>
  <br>
   <%= render 'dialog' %>
</div>

<!-- modal para los eventos del dia -->

<div class="modal fade" tabindex="-1" role="dialog" id="modals_events">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title day_numbeer"></h4>
      </div>
      <div class="modal-body evenets">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" data-dismiss="modal" onclick="clean_modal()">Aceptar</button>
        <button id="btn_new_event_ss" type="button" class="btn btn-primary hidden" data-dismiss="modal" >Nuevo evento</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- gggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg -->

<div class="modal fade" tabindex="-1" role="dialogs" id="modals_news_events">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title day_numbeer"></h4>
      </div>
      <div class="modal-body">
        <%= form_for(@event, remote: true, :html => { :role => "form" })  do |f| %>
          <div id="error_explanation" class="text-danger modal-errors"></div>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group input-md">
                <%= f.label 'Nombre' %><br>
                <%= f.text_field :name, :class => "form-control"  %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label 'Fecha' %><br>
                  <%= f.datetime_local_field :start_time, :class => "form-control" %>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group input-md">
                <%= f.label 'Evento' %><br>
                <%= f.text_field :description, :class => "form-control"  %>
              </div>
            </div>
            <hr style="border: 1; margin-top: 0px; ">
      </div>

      <div class="modal-footer">
            <%= f.submit "Registrar", :class => "btn btn-success bold" %>
      </div>
    <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
