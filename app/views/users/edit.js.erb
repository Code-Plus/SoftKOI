// Add the dialog title
$('#dialog h4').html("<i class='fa fa-pencil'></i>&nbsp; Editar Usuario");

// Render the edit form
$('.modal-body').html('<%= j render("edit") %>');

// Show the dynamic dialog
$('#dialog').modal("show");

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
	$('.first_input').focus()
})

$('.rol').change(function(){
	var state = $('.rol option:selected').val();
	if (state == '2') {
		$('#permisos').removeClass('hidden');
	} else {
		$('#permisos').addClass('hidden');
	}
});

