<%= form_for(@type_product) do |f| %>

  <div class="form-inputs">
  	<%= f.label :name, "Nombre"%>
    <%= f.text_field :name %>
    <%= f.label :description, "Descripcion "%>
    <%= f.text_area :description %>
    <%= f.text_field :state %>
  </div>

  <div class="form-actions">
      <%= f.submit "Editar" %>
      <!--Se Valida el estado en que se encuentra el tipo producto-->
      <% if @type_product.may_disponible? %>
        <% link_to "Habilitar", "/type_product/#{@type_product.id}/habilitar", method: :put %>  
      <% else %>
        <% link_to "Inhabilitar", "/type_product/#{@type_product.id}/habilitar", method: :put %>  
      <% end %>
      end
  </div>

<% end %>
