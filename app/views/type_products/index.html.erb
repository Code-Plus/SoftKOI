<div class="ui container">
  <div class="ui segment">
    <%= link_to new_type_product_path, class: 'ui right floated green button' do %>
      <i class="add circle icon"></i>
      Nuevo Tipo de Producto.
    <% end %>
    <br><br>
    <table class="ui green compact celled unstackable striped table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>State</th>
          <th width="250">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @type_products.each do |type_product| %>
          <tr>
            <td><%= type_product.name %></td>
            <td><%= type_product.description %></td>
            <td><%= type_product.state %></td>
            <td><%= link_to type_product, class: 'tiny ui yellow button' do%>
              <i class="unhide icon"></i>
              Detalles
            <% end %>

            <%= link_to edit_type_product_path(type_product), class: 'tiny  ui blue button' do %>
              <i class="edit icon"></i>
              Editar
            <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @type_products %>
  </div>
</div>
