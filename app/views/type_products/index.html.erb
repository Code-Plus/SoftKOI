<h1>Listing Type Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_products.each do |type_product| %>
      <tr>
        <td><%= type_product.name %></td>
        <td><%= type_product.description %></td>
        <td><%= type_product.state %></td>
        <td><%= link_to 'Show', type_product %></td>
        <td><%= link_to 'Edit', edit_type_product_path(type_product) %></td>
        <td><%= link_to 'Destroy', type_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

