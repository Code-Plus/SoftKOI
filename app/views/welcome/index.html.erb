<div style="margin: 0px 60px;">

  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="panel panel-custom">
        <div class="panel-body">
          <h3 class="pull-left welcome"> Bienvenido a SoftKOI APP <strong><%= current_user.name %></strong> </h3>
          <h3 class="pull-right bold welcome"><%= current_user.role.name %></h3>
        </div>
      </div>
    </div>
  </div>

  <%# Contadores %>
  <div class="row">
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
      <a href="#">
        <div class="dashboard-stats">
          <div class="left">
            <h3 class="flatBluec"><%= @sale_totals %></h3>
            <h4>Ventas Totales</h4>
          </div>
          <div class="right flatBlue">
            <i class="ion-ios-cart"></i>
          </div>
        </div>
      </a>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
      <a href="#">
        <div class="dashboard-stats">
          <div class="left">
            <h3 class="flatBluec"><%= @produt_totals %></h3>
            <h4>Total Productos</h4>
          </div>
          <div class="right flatBlue">
            <i class="ion-ios-pricetags"></i>
          </div>
        </div>
      </a>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
      <a href="#">
        <div class="dashboard-stats">
          <div class="left">
            <h3 class="flatBluec"><%= @customer_totals %></h3>
            <h4>Clientes Totales</h4>
          </div>
          <div class="right flatBlue">
            <i class="ion-android-contacts"></i>
          </div>
        </div>
      </a>
    </div>

    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
      <a href="#">
        <div class="dashboard-stats">
          <div class="left">
            <h3 class="flatBluec"><%= @reserve_totals %></h3>
            <h4>Total Reservas</h4>
          </div>
          <div class="right flatBlue">
            <i class="ion-ios-game-controller-b"></i>
          </div>
        </div>
      </a>
    </div>
  </div>
<hr style="border: 0.2px solid #dcdcdc; margin-top: 10px; margin-bottom:10px !important;">
  <%# Charts Estadisticas  %>
  <div class="row">
    <div class="col-sm-6 charts_home">
      <h4 class="bold upper" style="text-decoration:uppercase;">Productos registrados por días</h4>
      <%= line_chart Product.registered_last_week, :library => {hAxis: {format: 'yyyy/MM/dd'}, discrete: true, xtitle: "Fecha", ytitle: "Cantidad" }%>
    </div>
    <div class="col-sm-6 charts_home">
      <h4 class="bold upper" style="text-decoration:uppercase;">Reservas registradas por días</h4>
      <%= line_chart Reservation.registered_last_week, :library => {hAxis: {format: 'yyyy/MM/dd'}, discrete: true, xtitle: "Fecha", ytitle: "Cantidad" } %>
    </div>
  </div>

</div>
