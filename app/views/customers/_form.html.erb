<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :document %><br>
    <%= f.text_field :document %>
  </div>
  <div class="field">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.telephone_field :phone%>
  </div>
  <div class="field">
    <%= f.label :cellphone %><br>
    <%= f.telephone_field :cellphone %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_field :birthday, class:  'datapicker' %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :type_document_id %><br>
    <%= collection_select(:customer, :type_document_id, TypeDocument.all, :id, :description, {prompt: "Seleccione una opcion"})%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
