<%# Parcial donde se muestra el formulario para ir filtrando en la tabla de clientes %>
<div class="row item_search_wrapper hidden-print">
  <div class="col-sm-12">
    <h5 class="text-primary bold" style="text-transform:uppercase; font-size: 16px; margin-top: 3px;">
      <i class="fa fa-search"></i>  Buscar cliente
    </h5>

    <hr style="border: 1; margin-top: 0px; margin-bottom: 10px;">

    <%= form_for :search, :url => url_for(:controller => "sales", :action => "update_customer_options",
      :format => :js), :method => "get", :remote => true do |f| %>

      <div class="input-group">
        <%= f.text_field :customer_name, :class => "form-control customer_input", :placeholder => "Buscar cliente" %>
        <span class="input-group-btn">
          <button class="btn btn-success bold" data-toggle="modal" data-target="#customCustomer" style="    border-width: 2px !important;">
            <i class="fa fa-plus"></i>
          </button>
        </span>
      </div>

      <%= f.hidden_field :sale_id, :value => @sale.id %>
      <%= submit_tag "search", :class => "btn btn-primary btn-lg customer_search" %>
    <% end %>



    <br>
  </div>
</div>
