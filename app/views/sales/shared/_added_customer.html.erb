<%# Parcial donde muestra el cliente asociado a la venta (cambiar) %>
<% unless @sale.customer.blank? %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Documento</th>
          <th>Nombre </th>
        </tr>
      </thead>
      <tbody>
        <%= fields_for @sale do |f|%>
          <%= f.fields_for :customer, Customer.find(@sale.customer.id) do |e| %>
            <tr>
              <td><%= e.text_field :document, :class => "form-control", :readonly => true %></td>
              <td><%= e.text_field :firstname, :class => "form-control", :readonly => true %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>
