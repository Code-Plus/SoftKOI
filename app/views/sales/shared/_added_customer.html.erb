<%# Parcial donde muestra el cliente asociado a la venta %>
<% unless @sale.customer.blank? %>
<script type="text/javascript">
	  $('.customer_info').addClass('hidden');
</script>
	<div style="padding-bottom:5px;">
		<h5 class="text-primary bold" style="text-transform:uppercase; font-size: 16px; margin-top: 3px;">
	    <i class="fa fa-search"></i> Datos del cliente
	  </h5>

	  <%= fields_for @sale do |f|%>
	    <%= f.fields_for :customer, Customer.find(@sale.customer.id) do |e| %>
	      <p><%= e.text_field :doc_label, :class => "form-control input-sm", :readonly => true %></p>
	      <p><%= e.text_field :name_label, :class => "form-control input-sm", :readonly => true %></p>
	    <% end %>
	  <% end %>
	</div>
<% end %>
