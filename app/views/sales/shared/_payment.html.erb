<%# Modal para realizar el pago de la venta %>
<div class="make_payment">
	<h4 class="text-primary"><span class="glyphicon glyphicon-usd"></span>Realizar pago</h4>
	<hr>
	<%= form_for :payments, :url => url_for(:controller => "payments", :action => "make_payment"),
		:method => "get", :remote => true do |f| %>
		<label>Pago></label>
		<%= f.text_field :amount, :class => "form-control", :placeholder => "Amount", :value => @sale.remaining_balance %>
		<%= f.hidden_field :sale_id, :value => @sale.id %>
		<br>
		<%= submit_tag "Registrar pago", :class => "btn btn-primary btn-lg" %>
	<% end %>
</div>
