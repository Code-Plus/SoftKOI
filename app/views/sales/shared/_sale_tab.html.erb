<%# Tab donde esta todo el contenido de la venta %>
<div class="panel panel-default">
  <div class="panel-body"  style="padding-bottom: 5px !important;padding-top: 10px !important;">

    <div class="row hidden-print">
      <div class="col-sm-6">
        <%= form_for :search, :url => url_for(:controller => "sales", :action => "update_line_item_options", :format => :js), :method => "get", :remote => true do |f| %>

          <div class="form-group">
            <%= f.label :item_name, "Buscar productos", :class => "control-label" %><br>
            <%= f.text_field :item_name, :class => "form-control input-sm item_search_input", :placeholder => "Buscar..." %>
          </div>

          <%= f.hidden_field :sale_id, :value => @sale.id %>
          <%= submit_tag "search", :class => "btn btn-primary btn-lg item_search" %>
        <% end %>
      </div>

      <%= form_for(@sale) do |f| %>
      <div class="col-sm-6 required">

         <%= f.label :limit_date, :class => "control-label" %><br>
         <div class="input-group input-group-sm date datepicker">
            <%= f.text_field :limit_date, :class => "form-control input-sm", value: Time.now.strftime("%d/%m/%Y") %>
            <span class="input-group-addon">
               <i class="glyphicon glyphicon-calendar"></i>
            </span>
         </div>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">

    <div class="added_items">
      <%# Tabla con los productos asociados a la venta %>
      <%= render :partial => 'sales/shared/added_items', :locals=>{:f=>f} %>
    </div>

    <%= f.submit 'Update Sale', :class => "btn btn-success btn-lg sale_submit" %>
  <% end %>
  </div>
</div>
