<%= simple_form_for(@category) do |f| %>

	<% if @category.errors.any? %>
    	<div id="error_explanation">
      		<h3><%= pluralize(@category.errors.count, "errore") %> al intentar guardar: </h3>
            <ul>
      			<% @category.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
      		</ul>
    	</div>
    <% end %>

	<div class="form-inputs">
		<%= f.input :name, label: 'Nombre: ' %>
		<%= f.input :description, label: 'Descripcion: ' %>
		<!--El metodo association crea una etiqueta select con los registros de la tabla asociada-->
		<%= f.association :type_product, collection: TypeProduct.all, prompt: "Seleccione una opciÃ³n...", label: 'Tipo de producto: ' %>
	</div>

	<div class="form-actions">
		<%= f.button :submit %>
	</div>
<% end %>
