<%= form_for(@category, remote: true, :html => { :role => "form" })  do |f| %>

	<div id="error_explanation" class="bg-danger text-danger"></div>

	<div class="row">
		<div class="col-sm-12">

			<div class="form-group">
				<%= f.label :name, "Nombre:", :class => "control-label" %>
				<%= f.text_field :name, :class => "form-control first_input" %>
			</div>

			<div class="form-group">
				<%= f.label :description, "Descripcion:", :class => "control-label" %>
				<%= f.text_area :description, :class => "form-control" %>
			</div>

			<div class="form-group">
            <%= f.label :state,"Estado", :class => "control-label"%>
            <%= f.text_field :state, :class => "form-control" %>
         </div>

         <div class="form-group">
            <% if @category.may_disponible?%>
               <!--Si esta en no disponible tendremos la opcion de habilitarla-->
               <%= link_to "Habilitar", "/category/#{@category.id}/habilitar", method: :put %>
            <% else %>
               <!--Si esta disponible tendremos la opcion de inhabilitarla-->
              <%= link_to "Inhabilitar", "/category/#{@category.id}/inhabilitar", method: :put %>
            <% end %>
         </div>

		</div>

		<div class="col-sm-12">
			<hr style="border: 1; margin-top: 0px; ">
			<div class="form-group" style="margin-bottom: 0px;">
				<%= f.submit "Editar Categoria", :class => "btn btn-success" %>
			</div>
      </div>
	</div>


<% end %>
