<%= form_for(@input_product, remote: true, :html => { :role => "form", :multipart => true, :"data-type" => "json"})  do |f| %>

    <div id="error_explanation" class="text-danger modal-errors"></div>
    
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
           <!--Se ingresa la cantidad de productos que entraran al inventario-->
          <%= f.label :stock, "Cantidad", :class => "control-label"%>
          <%= f.number_field :stock, :class => "form-control first_input" %>
        </div>

        <div class="form-group">
          <!--Se trae la información del id del producto-->
          <%= f.label :product_id, "Identificador del producto", :class => "control-label" %><
          <%= f.text_field :product_id, readonly: true, :class => "form-control" %>
        </div>

        <div class="form-group">
          <!--Se trae la informacion del nombre del producto-->
          <%= label_tag "Producto" %>
          <%= text_field_tag @productx.name, @productx.name, disabled: true, :class => "form-control" %>
        </div>

        <div class="form-group">
          <!--Se trae la información del precio del produto-->
          <%= label_tag "Precio" %><br> 
          <%= text_field_tag @productx.price, @productx.price, disabled: true, :class => "form-control" %>         
        </div>
        
      </div>

      <div class="col-sm-12">
        <hr style="border: 1; margin-top: 0px; ">
        <div class="form-group" style="margin-bottom: 0px;">
            <%= f.submit "Registrar Entrada", :class => "btn btn-success bold" %>
        </div>
      </div>
  </div>
<% end %>
