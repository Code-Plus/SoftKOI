<%= form_for(@console, remote: true, :html => { :role => "form" }) do |f| %>
  <div id="error_explanation" class="text-danger modal-errors"></div>

  <div class="row">
    <div class="col-sm-12">

      <div class="form-group required">
        <%= f.label :name, "Nombre", :class => "control-label" %>
        <%= f.text_field :name, :class => "form-control first_input" %>
      </div>
      
      <div class="form-group required">
        <%= f.label :serial, "Serial", :class => "control-label" %>
        <%= f.text_field :serial, :class => "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :description, "DescripciÃ³n", :class => "control-label" %>
        <%= f.text_area :description, :class => "form-control" %>
      </div>
    </div>

    <div class="col-sm-12">
      <hr style="border: 1; margin-top: 0px; ">
      <div class="form-group" style="margin-bottom: 0px;">
        <%= f.submit "Editar Consola", :class => "btn btn-success bold" %>
      </div>
      <div class="inline">
        <% if @console.may_disponible?%>
          <%= link_to "Habilitar", "/console/#{@console.id}/habilitar", method: :put, class: 'btn btn-primary bold' %>
          <%= link_to "Baja", "/console/#{@console.id}/baja", method: :put, class: 'btn btn-danger bold' %>
        <% else %>
          <%= link_to "Inhabilitar", "/console/#{@console.id}/inhabilitar", method: :put, class: 'btn btn-primary bold' %>
        <% end %>
      </div>
    </div>
  </div>

  
<% end %>
