<%= form_for(@product, remote: true, :html => { :role => "form"})  do |f| %>

   <div id="error_explanation" class="text-danger modal-errors"></div>

   <div class="row">
      <div class="col-sm-12">

         <div class="form-group required">
            <%= f.label :name, "Nombre", :class => "control-label" %>
            <%= f.text_field :name, :class => "form-control first_input" %>
         </div>

         <div class="form-group required">
            <%= f.label :description, "Descripción", :class => "control-label" %>
            <%= f.text_area :description, :class => "form-control" %>
         </div>
      </div>

      <div class="col-sm-6">
         <div class="form-group required">
            <%= f.label :price, "Precio", :class => "control-label" %>
            <%= f.number_field :price, :class => "form-control" %>
         </div>
      </div>

      <div class="col-sm-6">
         <div class="form-group required">
            <%= f.label :stock_min, "Cantidad mínima", :class => "control-label" %>
            <%= f.number_field :stock_min, :class => "form-control" %>
         </div>
      </div>

      <div class="col-sm-6">
         <div class="form-group required">
            <%= f.label :type_product, "Tipo de producto", :class => "control-label" %>
            <%= collection_select(:category, :type_product_id, TypeProduct.activos.order(name: :asc), :id, :name, {prompt: "Seleccione un tipo..."}, {:class=>'form-control type_product_id',:onchange =>"miabuela()"}) %>
         </div>
      </div>

      <div class="col-sm-6">
         <div class="form-group required" style="display:none">
            <%= f.label :category_id, "Categoría" %>
            <%= f.grouped_collection_select(:category_id, TypeProduct.activos.order(name: :asc), :categories, :name, :id, :name, {prompt: "Seleccione una categoría..."}, {:class=>'form-control category_id'}) %>
         </div>
      </div>

      <div class="col-sm-12">
         <hr style="border: 1; margin-top: 0px; ">
         <div class="form-group" style="margin-bottom: 0px;">
            <%= f.submit "Registrar producto", :class => "btn btn-success bold" %>
         </div>
      </div>
   </div>

<% end %>
