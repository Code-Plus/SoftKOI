<p id="notice"><%= notice %></p>

<h1>Listing Sale Details</h1>

<table>
  <thead>
    <tr>
      <th>Discount</th>
      <th>Price</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_details.each do |sale_detail| %>
      <tr>
        <td><%= sale_detail.discount %></td>
        <td><%= sale_detail.price %></td>
        <td><%= sale_detail.product %></td>
        <td><%= link_to 'Show', sale_detail %></td>
        <td><%= link_to 'Edit', edit_sale_detail_path(sale_detail) %></td>
        <td><%= link_to 'Destroy', sale_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

