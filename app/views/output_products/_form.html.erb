<%= form_for(@output_product) do |f| %>

<div style="margin: 0px 60px;">
   <% if @output_product.errors.any? %>
   <div id="error_explanation" class="text-danger modal-errors">
      <ul>
         <% @output_product.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
      </ul>
   </div>
   <% end %>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
         <div class="col-sm-12">
            <div class="form-group required">
               <%= f.label :stock, "Cantidad a dar de baja", :class => "control-label"%>
               <%= f.number_field :stock, :class => "form-control first_input" %>
            </div>

            <div class="form-group required">
               <!--Se trae la informaci贸n del id del producto-->
               <%= f.label :product_id, "C贸digo del producto", :class => "control-label" %>
               <%= f.text_field :product_id, readonly: true, :class => "form-control" %>
            </div>

            <div class="form-group">
               <!--Se trae la informaci贸n del id del producto-->
               <%= label_tag "Producto"  %>
               <%= text_field_tag @output_product.product.name,@output_product.product.name, readonly: true, :class => "form-control" %>
            </div>

            <div class="form-group">
               <!--Se trae la informaci贸n del precio del produto-->
               <%= label_tag "Precio" %>
               <%= text_field_tag @output_product.product.price,@output_product.product.price, readonly: true, :class => "form-control" %>
            </div>

            <div class="form-group">
              <%= label_tag "Cantidad actual" %>
              <%= text_field_tag @output_product.product.stock,@output_product.product.stock , readonly: true, :class => "form-control"%>
            </div>

         </div>

         <div class="actions">
            <%= f.submit "Registrar Salida", :class => "btn btn-success bold" %>
         </div>
      </div>
    </div>
  </div>

</div>
<% end %>
