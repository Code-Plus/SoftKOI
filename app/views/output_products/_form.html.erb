<h1>Dar de baja un producto</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>State</th>
      <th>Stock m√≠nimo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.state %></td>
        <td><%= product.stock_min %></td>
        <% if @product.may_disponible?%>
      	<%= link_to "Habilitar", "/product/#{@product.id}/habilitar", method: :put %>
    	<% else %>
      	<%= link_to "DarDeBaja", "/output_product/#{@product.id}/deBaja", method: :put %>
    	<% end %>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

