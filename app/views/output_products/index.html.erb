<h1>Salidas de productos</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad de baja</th>
      <th>Producto</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @output_products.each do |output_product| %>
      <tr>
        <td><%= output_product.stock %></td>
        <td><%= output_product.product.name %></td>
        <td><%= output_product.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Productos</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Estado</th>
      <th>Cantidad m√≠nima</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= product.stock %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.state %></td>
        <td><%= product.stock_min %></td>
      </tr>
    <% end %>
  </tbody>
</table>

