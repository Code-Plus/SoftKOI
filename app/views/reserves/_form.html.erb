<%= form_for(@reserve, remote: true, :html => { :role => "form" })  do |f| %>
<div id="error_explanation" class="text-danger modal-errors"></div>

  <div class="field" id="m_r_reserves">
    <%= f.label :customer,"Cliente" %><br>
    <%= f.text_field :customer , :class => "form-control"%>
  </div>
  <div class="field">
  <%= f.label :product_id,"Consola" %><br>
				<%= collection_select(:product,:product_id, Product.consolas, :id, :name, {prompt: "Seleccione una opcion"}, :class => "form-control") %>
  </div>
  <div class="field">
    <%= f.label :date,"Fecha" %><br>
    <%= f.date_select :date%>
  </div>
  <div class="field">
    <%= label_tag :interval,"Intervalo" %><br>
    <%= select_tag(:interval, options_for_select(@reserve_prices.pluck(:time, :id)), prompt: "Selecciona una opciÃ³n", :class => "form-control") %>
  </div>
  <div class="field">
    <%= f.label :start_time,"Hora de incio" %><br>
    <%= f.text_field :start_time ,:class => "form-control"%>
  </div>
  <div class="field">
    <%= f.label :end_time,"Hora de finalizacion" %><br>
    <%= f.text_field :end_time,:class => "form-control",readonly: true %>
  </div>
  <div class="field">
    <%= f.label :state,"Estado" %><br>
    <%= f.text_field :state, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :price_reserve_id," Precio" %><br>
    <%= f.number_field :reserve_price_id , :class => "form-control"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
